<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="repository.bembelbruder"
        name="bembelbruder Add-ons"
        version="0.0.1"
        provider-name="bembelbruder">
    <extension point="xbmc.addon.repository"
        name="bembelbruder Add-on Repository">
		<info>https://raw.githubusercontent.com/bembelbruder/bembelrepo/master/datadir/addons.xml</info>		      
		<checksum>https://raw.githubusercontent.com/bembelbruder/bembelrepo/master/datadir/addons.xml.md5</checksum>		          
		<datadir zip="true">https://raw.githubusercontent.com/bembelbruder/bembelrepo/master/datadir</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Install add-ons from bembelbruder</summary>
		<summary lang="de">Installiere Add-ons von bembelbruder</summary>
		<description>download and install add-ons from repository-bembelbruder addon-repository.</description>
		<description lang="de">Downloade und installiere Add-ons vom repository-bembelbruder Add-on-Repository.</description>
		<disclaimer>bembelbruder hat die Add-ons nicht selber erstellt und haftet nicht für deren Inhalt.</disclaimer>
		<platform>all</platform>
	</extension>
</addon>

